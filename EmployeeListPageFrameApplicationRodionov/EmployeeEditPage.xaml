<Page x:Class="EmployeeListPageFrameApplicationRodionov.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EmployeeListPageFrameApplicationRodionov"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeEditPag">

    <Grid >
        <ListBox>
        <StackPanel Orientation="Vertical" Margin="0,152,0,0">
            <TextBlock  HorizontalAlignment="Center" Margin="0,0,120,0" TextWrapping="Wrap" Text="Введите имя:" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBoxName" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="201" Height="32"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,15,90,0" TextWrapping="Wrap" Text="Введите должность:" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBoxPosition" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  Width="201" Height="32"/>
            <Button  Content="Сохранить изменения" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Bottom" Click="ApplyChanges" Height="30"/>
        </StackPanel>
        </ListBox>
        
        
        
       
        

    </Grid>
</Page>
